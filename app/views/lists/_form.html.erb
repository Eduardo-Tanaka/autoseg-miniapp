<%= simple_form_for [@user, @list] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: "Título", required: true, autofocus: true %>
    <%= f.input :description, label: "Descrição", required: true %>
    <%= f.input :public, label: "Público?" %>
  </div>

  <% if @list.items.any? %>
    <p class="lead">Tarefas</p>
  <% end %>
  <% @list.items.each do |item| %>
    <%= item.description %>   <%= link_to user_list_item_path(@user, @list, item), method: :delete do %>Deletar <span class="glyphicon glyphicon-trash"></span><%end%>
    <br />
  <% end %>

  <div id="lista_tarefas">

  </div>

  <p id="adicionar_tarefa">Adicionar Tarefas <span class="glyphicon glyphicon-plus"></span></p>

  <div class="form-actions">
    <%= f.button :submit, "Salvar" %>
  </div>
<% end %>

<script>
  $(document).ready(function(){
    var i = 0;
    $("#adicionar_tarefa").on("click", function(){
      var tarefa = "<input id='list_items_attributes_"+i+"_description' class='string optional form-control' type='text' name='list[items_attributes]["+i+"][description]'>";
      i++;
      $("#lista_tarefas").append(tarefa);
    })
  });
</script>
