<%= simple_form_for [@user, @list] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, required: true, autofocus: true %>
    <%= f.input :description, required: true %>
    <%= f.input :public %>
  </div>

  <% @list.items.each do |item| %>
    <%= item.descricao %><%= link_to "deletar", user_list_item_path(@user, @list, item), method: :delete %>
    <br />
  <% end %>

  <div id="lista_tarefas">

  </div>

  <p id="adicionar_tarefa">Adicionar Tarefas</p>

  <div class="form-actions">
    <%= f.button :submit, "Salvar" %>
  </div>
<% end %>

<script>
  $(document).ready(function(){
    var i = 0;
    $("#adicionar_tarefa").on("click", function(){
      var tarefa = "<input id='list_items_attributes_"+i+"_description' class='string optional form-control' type='text' name='list[items_attributes]["+i+"][description]'>";
      i++;
      $("#lista_tarefas").append(tarefa);
    })
  });
</script>
